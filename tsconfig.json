{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    /* Basic Options */
    "outDir": "./dist",
    "target": "esnext",
    "lib": ["esnext"],
    "declaration": false,
    // "jsx": "react",

    /* Module Options */
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Helper Options */
    "noEmitHelpers": true,
    "importHelpers": true,

    /* Debug Options */
    "sourceMap": true,
    "pretty": true,
    "locale": "ja"
  }
}
